<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WedstrijdGokApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WedstrijdGokApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Wedstrijd gok app">

    <StackPanel Margin="10" Spacing="10">
        <!-- Titel -->
        <TextBlock Text="Wedstrijd Gok App" FontSize="24" FontWeight="Bold" TextAlignment="Center" />

        <!-- Synchroniseer Data -->
        <Button Content="Synchroniseer Wedstrijden" Click="Synchroniseer_Click" HorizontalAlignment="Center" />

        <!-- Geplande Wedstrijden -->
        <TextBlock Text="Geplande Wedstrijden:" FontWeight="Bold" />
        <ListBox x:Name="WedstrijdListView" Height="150" />

        <!-- Weddenschap Plaatsen -->
        <TextBlock Text="Plaats een Weddenschap:" FontWeight="Bold" />
        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBox x:Name="TeamInput" Width="200" PlaceholderText="Team" />
            <Button Content="Plaats Weddenschap" Click="PlaatsWeddenschap_Click" />
        </StackPanel>

        <!-- Gebruikers Saldo -->
        <TextBlock x:Name="SaldoText" Text="Saldo: 50 4S-dollars" FontWeight="Bold" />
    </StackPanel>
</Window>
